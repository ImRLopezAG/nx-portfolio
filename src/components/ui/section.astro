---
interface Props {
  title?: string;
  className?: string;
}
const { title, className } = Astro.props;
---

<section
  class:list={['flex flex-col gap-4 max-w-[800px] mx-auto mb-8', className]}
>
  {title && <h2 class='mb-2 font-bold text-2xl hover:underline'>{title}</h2>}
  <slot />
</section>
