---
import AtorposWrapper from '@/components/page/components/atropos-wrapper.astro'
import DiscordCard from '@/components/page/components/discord.astro'
import Layout from '../layouts/Layout.astro'
import { ProfileTab } from '@/components/page/components/profile-tab'
import Project from '@/components/page/project.astro'
---

<Layout title='ImRLopezAg'>
  <aritcle id='Home' class='flex flex-col gap-8'>
    <AtorposWrapper>
      <DiscordCard />
    </AtorposWrapper>
    <ProfileTab client:idle />
  </aritcle>
  <aritcle id='Projects'>
    <div />
    <Project />
  </aritcle>
</Layout>

<script>
  window.addEventListener('hashchange', ({ newURL }) => {
    const match = newURL.match(/home/i) ? 70 : 38
    window.scrollTo(window.scrollX, window.scrollY - match)
  })
</script>