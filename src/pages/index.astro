---
import AtorposWrapper from '@components/astro/atropos-wrapper.astro'
import DiscordCard from '@components/astro/discord.astro'
import Project from '@components/section/project.astro'
import Layout from '@layouts/Layout.astro'
import { ProfileTab } from '@components/react'
---

<Layout title='ImRLopezAg'>
  <aritcle id='Home' class='flex flex-col gap-8'>
    <AtorposWrapper>
      <DiscordCard />
    </AtorposWrapper>
    <ProfileTab client:idle />
  </aritcle>
  <aritcle id='Projects'>
    <Project />
  </aritcle>
</Layout>

<script>
  window.addEventListener('hashchange', ({ newURL }) => {
    const match = newURL.match(/home/i) ? 70 : 38
    window.scrollTo(window.scrollX, window.scrollY - match)
  })
</script>